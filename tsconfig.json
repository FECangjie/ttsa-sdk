{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "sourceMap": false,
    "strict": true,
    "removeComments": false,
    "noImplicitAny": false,
  },
  "declaration": true,
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}